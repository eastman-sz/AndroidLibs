<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@drawable/common_dialog_bg"
              android:orientation="vertical"
>

    <com.common.base.CustomFontTextView
            android:id="@+id/titleTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="15dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:textColor="@color/sfs_c5"
            android:textSize="@dimen/sfs_s8"
            android:gravity="center"
            android:text="温馨提示"
    />

    <com.common.base.CustomFontTextView
            android:id="@+id/contentTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="15dp"
            android:paddingBottom="20dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:textColor="@color/sfs_c5"
            android:textSize="@dimen/sfs_s6"
            android:gravity="center"
            android:text="SSSS"
            android:lineSpacingMultiplier="1.1"
            android:lineSpacingExtra="1dp"
    />

    <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/basic_line_height"
            android:background="@color/sfs_c6"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:orientation="horizontal"
    >
        <com.common.base.CustomFontTextView
                android:id="@+id/leftBtnTextView"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textColor="@color/sfs_c11"
                android:textSize="@dimen/sfs_s4"
                android:gravity="center"
                android:text="取消"
        />

        <ImageView
                android:layout_width="@dimen/basic_line_height"
                android:layout_height="match_parent"
                android:background="@color/sfs_c6"
        />

        <com.common.base.CustomFontTextView
                android:id="@+id/rightBtnTextView"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textColor="@color/sfs_c11"
                android:textSize="@dimen/sfs_s4"
                android:gravity="center"
                android:text="确定"
        />

    </LinearLayout>


</LinearLayout>
